{
  "compilerOptions": {
    // 鼠标悬浮上去会有提示对应的作用
    // 文档 https://www.tslang.cn/docs/handbook/compiler-options.html
    "module": "es2015",
    "target": "ES5",
    "jsx": "react",

    "strict": true, // 所有严格检查的总开关，控制下面7个属性
    "noImplicitAny": false, // 不允许隐式的any类型 默认false
    "strictNullChecks": true, // 严格的检查控制 不允许null出现 默认false
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false, // 不允许不明确类型的this 默认false
    "alwaysStrict": false, // 用来设置编译后的文件是否使用严格模式，默认false

    // "rootDir": "./src",
    "outDir": "./dist",
    // "lib": ["dom"],
    // "outFile": "./dist/app.js", // 将所有的全局作用域中的代码合并为同一个文件中
    "allowJs": false, // 是否对js文件进行编译，默认是false
    "checkJs": false, // 是否检查js代码是否符合语法规范，默认是false
    "removeComments": false, // 编译后文件去除注释
    "noEmit": false, // 执行编译，但是不生成编译后的文件。就是检查下代码规则，但是需要编译结果
    "noEmitOnError": true, // 当有错误的时候，不生成编译结果
    "sourceMap": false, // 是否生成打包后ts和js的位置关系映射文件 .mp
    "noUnusedLocals": false // 没有使用的变量，打包时会提示报错
  },
  "include": ["./src/**/*"], // 编译的包含文件 files作用和include一样
  "exclude": ["./src/hello/**"] // 不包含的文件
}
